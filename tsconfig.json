{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "jest.config.js", "jest.setup.ts"],
  "exclude": ["node_modules"],
  "types": ["jest", "node"]
}
